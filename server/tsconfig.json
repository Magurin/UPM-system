{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "src",
    "paths": {
      "*": ["*"]
    },
    "types": ["node", "jest"]      // чтобы TS знал про describe/it/expect
  },
  "include": [
    "src/**/*.ts"                  // сюда попадут и tests/, и сам app.ts
  ]
}
