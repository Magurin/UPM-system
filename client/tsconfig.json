{
  "compilerOptions": {
     "target": "ES2017",      
    "lib": [
      "ES2017",
      "DOM"
    ],
    "jsx": "react-jsx",            // позволяет использовать JSX без ручного импорта React
    "moduleResolution": "node",    // искать модули в node_modules
    "esModuleInterop": true,       // для корректного импорта CommonJS
    "allowSyntheticDefaultImports": true
  }
}
